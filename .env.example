# =============================================================================
# AgentLeak Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# LLM API Keys
# =============================================================================
# OpenAI API (required for GPT-4, GPT-3.5)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-org-id  # Optional

# Anthropic API (required for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Azure OpenAI (alternative to OpenAI)
AZURE_OPENAI_API_KEY=your-azure-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4

# Google AI (for Gemini models)
GOOGLE_API_KEY=your-google-ai-key

# Hugging Face (for open models)
HUGGINGFACE_API_KEY=hf_your-huggingface-token

# =============================================================================
# Model Configuration
# =============================================================================
# Default model for experiments
DEFAULT_MODEL=gpt-4o-mini
# DEFAULT_MODEL=claude-3-5-sonnet-20241022
# DEFAULT_MODEL=gpt-4-turbo

# Temperature for LLM calls (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.0

# Maximum tokens per response
LLM_MAX_TOKENS=4096

# =============================================================================
# Benchmark Settings
# =============================================================================
# Number of scenarios to generate
BENCHMARK_N_SCENARIOS=1000

# Attack probability (0.0 to 1.0)
BENCHMARK_ATTACK_PROB=0.5

# Random seed for reproducibility
BENCHMARK_SEED=42

# =============================================================================
# Detection Settings
# =============================================================================
# Embedding model for semantic detection
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Similarity threshold for semantic matching
SEMANTIC_THRESHOLD=0.85

# =============================================================================
# Defense Settings (LCF)
# =============================================================================
# LCF rank for LEACE-style filtering
LCF_RANK=64

# LCF alpha (regularization)
LCF_ALPHA=0.01

# =============================================================================
# Output Settings
# =============================================================================
# Directory for benchmark outputs
OUTPUT_DIR=./agentleak_data

# Enable verbose logging
VERBOSE=true

# Save execution traces
SAVE_TRACES=true

# =============================================================================
# Development Settings
# =============================================================================
# Enable debug mode
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
